@model IEnumerable<Models.Brasserie>

@{
    ViewData["Title"] = "Brasserie";
}

<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown"
        aria-expanded="false">
        Brasserie
    </a>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <li><a class="dropdown-item" asp-area="" asp-controller="Fournisseur" asp-action="Index">Fournisseur</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Chateau" asp-action="Index">Chateau</a></li>
        <li><a class="dropdown-item" asp-area="" asp-controller="Supermarche" asp-action="Index">Supermarch√©</a>
        </li>


    </ul>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Siret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Siret)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    <a asp-area="" asp-controller="Brasserie" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                    <a asp-area="" asp-controller="Brasserie" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Brasserie" asp-action="Create">Ajouter une nouvelle brasserie</a>
